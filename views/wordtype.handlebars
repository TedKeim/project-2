{{> nav/nav-block}}


<div id="main-container" class="container container-fluid">
  <div class="jumbotron header-wrap">
    <p class="lead"><strong>Word Type!!! </strong></p>
    <hr class="my-4">
    
 <link rel="stylesheet" href="/assets/css/wordtype.css">
      {{#if isloggedin}}
    
	<div class="wrapper">
		<h1></h1>
		<p>Type as many words as you can until time runs out!</p>
		<button id = "startbtn">START</button>
		<div class="outerWrap">
			<div class="scoreWrap">
				<p>Score</p>
				<span class="score">0</span>
			</div>
			<div class="timeWrap">
				<p>Time left</p>
				<span class="time">60</span>
			</div>
		</div>
		<div class="wordsWrap">
			<p class="words"></p>
		</div>
	</div>
	 <div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">
    
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <h2 class="modal-title">Game Over!</h2>
        </div>
        <div class="modal-body">
          <p></p>
        </div>
        <div class="modal-footer">
          <button type="button" class="restartbtn" data-dismiss="modal">Play Again</button>
        </div>
      </div>
      <!-- end modal content --> 

    </div>
  </div>

 </div>
 </div>

  <script src="/assets/js/wordtype.js"></script>

    {{else}}
    <p>You need to log in to use this app.</p>
    {{/if}}
    <h5 id="login-err-msg"></h5>
  </div>

</div>

{{> modal/login-block}}