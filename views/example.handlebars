{{> nav/nav-block}}

<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <h2>{{msg}}</h2>
        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <label for="example-text"> New Feature </label>
            <input type="text" id="example-text" class="form-control" aria-describedby="example-text" placeholder="Feature Text">
          </div>
          <div class="form-group">
            <label for="example-description">New Feature Description</label>
            <textarea class="form-control" id="example-description" aria-describedby="example-description" placeholder="Description"></textarea>
          </div>
          <button id="submit" class="btn btn-primary float-right">Submit</button>
        </form>
        <h4>Feature idea belong's to this user:</h4>
        <ul id="example-list" class="list-group">
          {{#each examples}}
          <li data-id="{{this.id}}" class="list-group-item">
            <a href="example/{{this.id}}">{{this.text}}</a>
            <button class="btn btn-danger float-right delete">ï½˜</button>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>

<script src="/assets/js/example.js"></script>

