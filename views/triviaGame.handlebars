
      {{#if isloggedin}}
<div id="main-container" class="container container-fluid">
  <div class="jumbotron header-wrap">
    <p class="lead"><strong>Olympics Trivia</strong></p><hr class="my-4">
    
      <link rel="stylesheet" href="/assets/css/trivia.css">

      <div id="game" class="justify-center flex-column hidden">
        <div id="hud">
          <div id="hud-item">
            <p id="progressText" class="hud-prefix">
              Question
            </p>
              <div id="progressBar">
              <div id="progressBarFull"></div>
            </div>
          </div>
          <div id="hud-item">
            <p class="hud-prefix">
              Score
            </p>
            <h1 class="hud-main-text" id="score">
              0
            </h1>
          </div>
        </div>
        <h2 id="question"></h2>
        <div class="choice-container">
          <p class="choice-prefix">A</p>
          <button id="choice-text1" data-number="1"></button>
        </div>
        <div class="choice-container">
          <p class="choice-prefix">B</p>
          <button id="choice-text2" data-number="2"></button>
        </div>
        <div class="choice-container">
          <p class="choice-prefix">C</p>
          <button id="choice-text3" data-number="3"></button>
        </div>
        <div class="choice-container">
          <p class="choice-prefix">D</p>
          <button id="choice-text4" data-number="4"></button>
        </div>
      </div>
    
    <script src="/assets/js/triviaApi.js"></script>

    {{else}}
    <p>You need to log in to use this app.</p>
    {{/if}}
    <h5 id="login-err-msg"></h5>
  

    

{{> modal/login-block}}